{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src/",
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "types": [
      "@nuxt/types",
      "@types/node",
      "@nuxtjs/sentry",
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "public",
    ".husky",
    "dist",
    ".nuxt",
    ".github",
    ".yarn",
    "tests"
  ]
}
